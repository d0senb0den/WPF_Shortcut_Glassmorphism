<Window x:Class="WPF_Shortcut_Glassmorphism.ForegroundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shortcut_Glassmorphism"
        mc:Ignorable="d"
         Background="#01000000"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        >

    <Grid x:Name="MainGrid" Margin="0,50,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Content="Discord" FontFamily="Arial" FontSize="25" Foreground="White">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="2">
                </DropShadowEffect>
            </Label.Effect>
        </Label>
        <Grid Grid.Row="1" x:Name="ShortcutGrid" HorizontalAlignment="Left">
        </Grid>
    </Grid>
</Window>
